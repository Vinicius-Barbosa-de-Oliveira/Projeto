        <TextBox x:Name="Resultados" Margin="0,0,429,52" Text="Dados" TextWrapping="Wrap" Grid.ColumnSpan="2" Height="210" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="340"/>
